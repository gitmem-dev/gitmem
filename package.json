{
  "name": "gitmem-mcp",
  "version": "1.0.8",
  "description": "Institutional memory for AI coding agents. Memory that compounds.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "gitmem": "bin/gitmem.js",
    "gitmem-mcp": "bin/gitmem.js"
  },
  "scripts": {
    "build": "tsc && npm run test:unit",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:perf": "vitest bench --config vitest.perf.config.ts",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:smoke": "npm run test:smoke:free && npm run test:smoke:pro",
    "test:smoke:free": "GITMEM_TIER=free vitest run --config vitest.smoke.config.ts tests/smoke/smoke-free.test.ts",
    "test:smoke:pro": "vitest run --config vitest.smoke.config.ts tests/smoke/smoke-pro.test.ts",
    "test:all": "npm run test:unit && npm run test:smoke && npm run test:integration && npm run test:perf && npm run test:e2e",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.0.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.38",
    "@testcontainers/postgresql": "^10.6.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "@types/uuid": "^9.0.0",
    "pg": "^8.11.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "!dist/**/*.test.*",
    "bin",
    "hooks",
    "!hooks/tests",
    "schema",
    "CLAUDE.md.template",
    "README.md",
    "CHANGELOG.md"
  ],
  "keywords": [
    "mcp",
    "gitmem",
    "claude",
    "cursor",
    "institutional-memory",
    "ai-coding",
    "scars",
    "semantic-search"
  ],
  "author": "nTEG Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nTEG-dev/gitmem.git"
  },
  "homepage": "https://gitmem.ai",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
